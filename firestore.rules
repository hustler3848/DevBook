rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Snippets
    match /snippets/{snippetId} {
      // 1. Anyone can read a public snippet.
      // 2. The author can read their own private snippet.
      allow read: if resource.data.isPublic == true || (request.auth != null && request.auth.uid == resource.data.creatorId);
      
      // Authenticated users can create snippets.
      allow create: if request.auth != null;

      // Only the author can update or delete their own snippet.
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.creatorId;
    }

    // User data (profiles, stars, saves)
    match /users/{userId}/{document=**} {
      // Only the authenticated user can read or write to their own data.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
